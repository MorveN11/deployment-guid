{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "/frontend/Dockerfile",
    "watchPatterns": [
      "/frontend/**"
    ]
  },
  "deploy": {
    "healthcheckPath": "/health.json",
    "healthcheckTimeout": 100,
    "restartPolicyType": "NEVER",
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 1073741824
      }
    }
  }
}

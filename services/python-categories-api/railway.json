{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "/services/python-categories-api/Dockerfile",
    "watchPatterns": [
      "/services/python-categories-api/**"
    ]
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "NEVER",
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 1073741824
      }
    }
  }
}
